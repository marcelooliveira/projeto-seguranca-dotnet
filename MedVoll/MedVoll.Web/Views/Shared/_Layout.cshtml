<!DOCTYPE html>
<html lang="pt">
<head>
    <title>@ViewData["Title"] - Voll.med</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/assets/logo.png">
    <link rel="stylesheet" href="~/css/estilos.css">
</head>

<body>
    <div class="wrapper">
        <!-- Substitui o menu com uma renderização parcial -->
        @await Html.PartialAsync("_menu")

        <div class="container">
            <!-- Substitui as mensagens com uma renderização parcial -->
            @await Html.PartialAsync("_mensagens")
        </div>

        <!-- Define a seção "conteudo" que será preenchida nas views -->
        @RenderBody()

        <div class="footer" id="rodape">
            @await Html.PartialAsync("_footer")
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
